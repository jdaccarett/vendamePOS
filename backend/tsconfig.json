{
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "outDir": "dist",
      "rootDir": "src",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "strict": true,
      "moduleResolution": "node"
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  